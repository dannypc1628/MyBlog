@model IEnumerable<MyBlog.Models.Option>

@{
    ViewData["Title"] = "Options";
}

<h1>Options</h1>

<p>
    <a asp-action="CreateOption">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td>
                <a asp-action="UpdateOption" asp-route-id="@item.Id">編輯</a> |
                <a asp-action="DeleteOption" asp-route-id="@item.Id">刪除</a>
            </td>
        </tr>
}
    </tbody>
</table>
